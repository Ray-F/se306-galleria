<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/GreenPalette"
    android:layout_width="match_parent"
    android:layout_height="230dp"
    android:layout_marginTop="20dp"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/ProductImageGrid"
        android:layout_width="170dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        ></ImageView>

    <TextView
        style="@style/ProductRow"
        android:id="@+id/ProductNameGrid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textAlignment="center"
        android:textSize="20pt"
        android:textStyle="bold"
        android:text="TITLE TEXT"></TextView>

    <TextView
        android:id="@+id/GridSpecialText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16pt"
        android:text="Special content goes here"></TextView>

</LinearLayout>