<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/GreenPalette"
    android:layout_width="match_parent"
    android:layout_height="130dp"
    android:orientation="horizontal"
    android:weightSum="8">

    <ImageView
        android:id="@+id/ProductImage"
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:scaleType="centerCrop"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="2.5dp"
        android:layout_marginRight="10dp"
        android:layout_weight="3"
        android:src="@drawable/test_raccoon"></ImageView>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="120dp"
        android:layout_weight="5"
        android:layout_gravity="center"
        >
        <TextView
            style="@style/ProductRow"
            android:id="@+id/ProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:text="TITLE TEXT"></TextView>

        <TextView
            android:id="@+id/ProductDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductName"
            android:layout_marginTop="5dp"
            android:text="Some description text about this product for the user"></TextView>
        <TextView
            android:id="@+id/RowSpecialText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ProductDescription"
            android:layout_marginTop="5dp"
            android:text="Special Text Goes Here And it might be long"
            >
        </TextView>

    </RelativeLayout>

    <TextView
        android:id="@+id/ProductPrice"
        android:layout_width="90dp"
        android:layout_height="match_parent"
        android:text="300.50 NZD"
        android:padding="5dp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginLeft="10dp"
        android:textSize="20sp"
        android:gravity="bottom"
        android:layout_weight="0.5"
        ></TextView>

</LinearLayout>