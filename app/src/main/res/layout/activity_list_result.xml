<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <data>
        <import type="android.view.View" />
        <variable
            name="viewmodel"
            type="nz.ac.aucklanduni.softeng306.team17.galleria.view.shared.LoadingViewModel" />

        <variable
            name="searchResultsEmpty"
            type="boolean" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.coordinatorlayout.widget.CoordinatorLayout
            android:id="@+id/header_section"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <include
                android:id="@+id/topBarLayout"
                layout="@layout/header_toolbar_layout" />

            <RelativeLayout
                android:id="@+id/secondaryToolbar"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="55dp"
                android:background="@color/mediumShadeGreen">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/SortIcon"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:minWidth="48dp"
                    android:padding="0dp"
                    app:icon="@drawable/ic_baseline_sort_24"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp"
                    app:iconSize="25dp" />

                <TextView
                    android:id="@+id/SortFilterText"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="50dp"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:text="Sort By: "
                    android:textSize="15dp" />


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/ViewLayoutIcon"
                    style="@style/Widget.AppCompat.Button.Borderless"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    app:icon="@drawable/grid_view_icon"
                    android:layout_alignParentRight="true"
                    app:iconGravity="textEnd"
                    app:iconPadding="0dp"
                    android:padding="0dp"
                    android:minWidth="48dp"
                    app:iconSize="30dp" />

            </RelativeLayout>

            <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:visibility="@{searchResultsEmpty &amp;&amp; !viewmodel.isLoading ? View.VISIBLE : View.GONE}"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <ImageView
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="80dp"
                        android:src="@drawable/no_results"
                        android:contentDescription="@string/no_results_found" />
                    <TextView
                        android:layout_marginTop="10dp"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/no_results_found"
                        android:textSize="20sp"
                        android:textColor="@color/darkGrey"
                        />
                </LinearLayout>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

            <include
                layout="@layout/loading_view"
                app:isLoading="@{viewmodel.isLoading}"
                />

            <androidx.recyclerview.widget.RecyclerView
                android:visibility="@{viewmodel.isLoading ? View.GONE : View.VISIBLE}"
                android:id="@+id/ProductRecyclerView"
                android:layout_marginTop="49dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clipToPadding="false"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                android:layout_marginHorizontal="16dp"
                app:layout_behavior="@string/appbar_scrolling_view_behavior">
            </androidx.recyclerview.widget.RecyclerView>

        <!-- CODE FOR RELATIVE ANCHORING TO BELOW SORT BAR IS SLIGHTLY OFF BUT UNNOTICEABLE WITH SPINNER INVISIBLE -->
        <Spinner
            android:id="@+id/sortSpinner"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@color/white"
            android:popupBackground="@color/white"
            app:layout_anchor="@+id/ProductRecyclerView"
            app:layout_anchorGravity="top|center"
            android:spinnerMode="dropdown"/>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>


    </LinearLayout>
</layout>
